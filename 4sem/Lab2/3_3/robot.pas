Program robot;
Var
  Fin,Fout: Text;
  NameFile: STRING;
  KolStep,Distance,KolWay,i: INTEGER; 
  TabStep,TabStep0: ARRAY[-50..50] OF LongInt; 

PROCEDURE SetTabStep();
VAR i,j: INTEGER;
BEGIN
  TabStep0[0]:=1;
  FOR i:=1 TO KolStep
  DO
    BEGIN
      FOR j:=-KolStep TO KolStep
      DO      
       IF j+1< Distance
       THEN
         TabStep[j]:=TabStep0[j-1]+TabStep0[j+1]
       ELSE  
         TabStep[j]:=TabStep0[j-1];       
      TabStep0:=TabStep;                       
      FOR j:=-KolStep TO Distance
      DO  
        BEGIN         
          TabStep[j]:=0;                         
        END;                              
    END;
