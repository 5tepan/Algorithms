Program Lab1(Input, Output);
var
  Fin,Fout: Text;
  NameFile: STRING;
  Ch: CHAR; 
  Prof: array [1..10] of INTEGER ;
  Abitur: array [1..1000,1..10] of INTEGER ;
  AbiturBall: array [1..1000,1..10] of INTEGER ;
  ListStud: array [1..10,1..1000+1] of INTEGER ;
  N,M,b,i,j,KolSpec,ii,jj,KolMest,Stud,NomProf: INTEGER;
  Nstr: STRING;
  
 PROCEDURE SetStudent(i,j: INTEGER);
 BEGIN
   NomProf:=Abitur[i,j];
   KolMest:= Prof[NomProf];
   ListStud[NomProf,KolMest+1]:=i;      
   FOR jj:=KolMest DOWNTO   1
   DO
     IF (ListStud[NomProf,jj]=0) OR ((ListStud[NomProf,jj]>0) AND (AbiturBall[ListStud[NomProf,jj],NomProf]< AbiturBall[ListStud[NomProf,jj+1],NomProf]))
     THEN
       BEGIN 
         Stud:=ListStud[NomProf,jj+1];
         ListStud[NomProf,jj+1]:=ListStud[NomProf,jj];
         ListStud[NomProf,jj]:=Stud;
       END;
   IF (ListStud[NomProf,KolMest+1]>0) AND (j<N) AND(Abitur[ListStud[NomProf,KolMest+1],j+1]>0)
   THEN 
     SetStudent(ListStud[NomProf,KolMest+1],j+1);
 END;
 
 BEGIN
  //WRITE('Введите файл ');
  //READLN(NameFile);
  //NameFile := NameFile + '.txt';
  ASSIGN(Fin, 'input.txt');
  RESET(Fin);
  ASSIGN(FOut, 'output.txt');
  REWRITE(FOut);
  READLN(Fin,Nstr);
  i:=Pos(' ',Nstr);
  VAL(Copy(Nstr,1,i-1),M,b);
  VAL(Copy(Nstr,i+1,Length(Nstr)),N,b);
  j:=1;
  Nstr:="";
  WHILE NOT EOLN(Fin)
  DO
    BEGIN
      READ(Fin,CH); 
      IF  CH=' '
      THEN
        BEGIN
          VAL(Nstr,Prof[j],b);
          j:=j+1;
          Nstr:="";
        END
      ELSE
        Nstr:=Nstr+CH;
    END;  
  VAL(Nstr,Prof[j],b);            
  READLN(Fin);   
  i:=1;
  KolSpec:=0;
  WHILE NOT EOF(Fin)
  DO
    BEGIN
      IF KolSpec=0
      THEN
        BEGIN
          READLN(Fin,Nstr); 
          VAL(Nstr,KolSpec,b);
        END;  
      FOR j:=1 TO KolSpec
      DO
        BEGIN  
          READLN(Fin,Nstr);
          ii:=Pos(' ',Nstr);
          VAL(Copy(Nstr,1,ii-1),Abitur[i,j],b);
          VAL(Copy(Nstr,ii+1,Length(Nstr)),AbiturBall[i,Abitur[i,j]],b);
        END;
      KolSpec:=0; 
      i:=i+1; 
    END;
  FOR i:=1 to M     
  DO  
    SetStudent(i,1);
  FOR i:=1 to N 
  DO
    BEGIN
      FOR j:=1 to Prof[i]     
      DO  
        IF ListStud[i,j] <> 0
        THEN
          WRITE(FOUT,ListStud[i,j]," ");   
      WRITELN(FOUT);  
    END;  
    
END.
