Program ErrorMath;
CONST 
  MaxKol=100000;
Type
  ArrayWord= array [-1..MaxKol] of LONGINT;
Var
  Fin,Fout: Text;
  NameFile: STRING;
  Ch: CHAR;
  i: INTEGER;
  Kol,KolNotError,Level: LONGINT; 
  Words:ArrayWord;
BEGIN
  ASSIGN(Fin, 'input.txt');
  RESET(Fin);
  ASSIGN(FOut, 'output.txt');
  REWRITE(FOut);
  READLN(Fin,Kol);
  KolNotError:=0;
  Level:=0;
  FOR i:=1 TO Kol*2
  DO
    BEGIN
      READ(Fin,Ch);
      IF  Ch="(" 
      THEN
        Level:=Level+1
      ELSE  
        Level:=Level-1;
      //кол-во правильных результатов  
      KolNotError:=KolNotError+Words[Level];
      IF (Level=0)     // варианты: "1( - 0"
      THEN
        KolNotError:=KolNotError+Words[-1];
        
      //запись в таблицу уровней
      IF (Level<>0)
      THEN
        Words[Level]:=Words[Level]+1;
      IF (Level=1) AND  (Ch="(")
      THEN
          Words[-1]:=Words[-1]+1;            
      
      IF EOF(Fin)
      THEN
        BREAK;
    END;  
  IF  (i DIV 2) < Kol
  THEN
    Kol:= i DIV 2;
  WRITELN(FOut,Kol*(2*Kol+1)-KolNotError);         
END.  
